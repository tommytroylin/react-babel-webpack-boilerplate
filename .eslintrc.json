{
  "praser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb",
  "plugins": [
    "react"
  ],
  "rules": {
    "func-names": "off",
    "react/prefer-stateless-function" : "warn",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.js",
          "**/*.test.jsx",
          "**/*.spec.js",
          "**/*.spec.jsx"
        ]
      }
    ]
  }
}