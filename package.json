{
  "name": "react-babel-webpack-boilerplate",
  "version": "1.0.2",
  "description": "A boilerplate for react / babel / webpack development workflow",
  "main": "index.js",
  "private": true,
  "scripts": {
    "lint": "eslint 'src/app/**/*.@(js|jsx)'; eslint --rule 'no-unused-expressions: 0' 'test/**/*.@(js|jsx)';",
    "test": "karma start test/karma.conf.js",
    "build": "webpack -d --progress --colors --display-error-details",
    "dist": "rm -rf dist/ && webpack -p --config webpack.dist.config.js --progress --colors --display-error-details",
    "dev": "webpack-dev-server --devtool eval --progress --colors --inline --hot "
  },
  "author": "Tommy Troy Lin",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.20.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "chai": "^3.5.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.1",
    "eslint": "^3.13.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "karma": "^1.4.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "karma-webpack": "^2.0.1",
    "mocha": "^3.2.0",
    "react-addons-test-utils": "^15.4.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  }
}
