{
  "name": "react-babel-webpack-boilerplate",
  "version": "1.0.1",
  "description": "A boilerplate for react / babel / webpack development workflow",
  "main": "index.js",
  "private": true,
  "scripts": {
    "lint": "(eslint 'src/app/**/*.@(js|jsx)'; eslint --rule 'no-unused-expressions: 0' 'test/**/*.@(js|jsx)'; exit 0)",
    "test": "(karma start test/karma.conf.js; exit 0)",
    "build": "webpack -d --progress --colors --display-error-details",
    "dist": "rm -rf dist/ && webpack -p --config webpack.dist.config.js --progress --colors --display-error-details",
    "dev": "webpack-dev-server --devtool eval --progress --colors --inline --hot --content-base build"
  },
  "author": "Tommy Troy Lin",
  "license": "MIT",
  "dependencies": {
    "react": "^0.14.7",
    "react-dom": "^0.14.7"
  },
  "devDependencies": {
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "chai": "^3.5.0",
    "copy-webpack-plugin": "^1.1.1",
    "css-loader": "^0.23.1",
    "eslint": "^2.2.0",
    "eslint-config-airbnb": "^6.0.2",
    "eslint-plugin-react": "^4.1.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "karma": "^0.13.19",
    "karma-chrome-launcher": "^0.2.2",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.5",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.4.5",
    "react-addons-test-utils": "^0.14.7",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.12",
    "webpack-dev-server": "^1.14.1"
  }
}
